<!DOCTYPE html>
<html>
<head>
  <title>Course WebCheck</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="user_nav">
  <% if current_user %>
    <p style="border-bottom-style:dashed;border-width:1px;">
	    Logged in as <%= current_user.name %>.
	    <%= link_to "Log out", log_out_path %>
    </p>
  <% else %>
    <%= link_to "Sign up", sign_up_path %> or
    <%= link_to "log in", log_in_path %>
  <% end %>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag :login, msg, :id => "flash_#{name}" %>
<% end %>

<%= yield %>

</body>
</html>
